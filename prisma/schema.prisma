generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique @db.VarChar(50)
  password String
  username String

  profileId Int?     @unique @map("profile_id")
  profile   Profile? @relation(fields: [profileId], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Profile {
  id     Int      @id @default(autoincrement())
  name   String
  birth  DateTime
  gender String   @db.Char(1)

  user User?

  histories    History[]
  profileImage ProfileImage[]

  teams     TeamOnProfiles[]
  positions PositionOnProfiles[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model History {
  id            Int     @id @default(autoincrement())
  imageCaptured String  @map("image_captured")
  isUnknown     Boolean @map("is_unknown")

  profileId Int?     @map("profile_id")
  profile   Profile? @relation(fields: [profileId], references: [id], onDelete: SetNull)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model TeamOnProfiles {
  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId Int     @map("profile_id")
  team      Team    @relation(fields: [teamId], references: [id])
  teamId    Int     @map("team_id")

  @@id([profileId, teamId])
  @@map("team_on_profiles")
}

model Team {
  id   Int    @id @default(autoincrement())
  name String

  profiles TeamOnProfiles[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model PositionOnProfiles {
  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId  Int      @map("profile_id")
  position   Position @relation(fields: [positionId], references: [id])
  positionId Int      @map("position_id")

  @@id([profileId, positionId])
  @@map("position_on_profiles")
}

model Position {
  id   Int    @id @default(autoincrement())
  name String

  profiles PositionOnProfiles[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model ProfileImage {
  id    Int    @id @default(autoincrement())
  image String

  faceEmbedding FaceEmbedding[]

  profileId Int     @map("profile_id")
  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("profile_image")
}

model FaceEmbedding {
  id     Int  @id @default(autoincrement())
  vector Json

  profileImageId Int          @map("profile_image_id")
  profileImage   ProfileImage @relation(fields: [profileImageId], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("face_embedding")
}
